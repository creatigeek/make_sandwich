<%= simple_form_for(@sandwichpost) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.input :sandwich_type, label: "What type of sandwich would you like to request?", :collection => ['Meaty :)~', 'Regular :)', 'Vegetarian :)', 'Vegan :-(', 'Paleo :D'], :as => :radio_buttons %>
	<%= f.button :submit %>
<% end %>
